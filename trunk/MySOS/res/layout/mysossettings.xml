<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    >
    <Button
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="OK"
	    android:id="@+id/acceptBtn"
	    android:layout_gravity="center_horizontal"
	    android:padding="10dp"
	    android:background="@color/salmonpink"
	    android:textColor="@color/white1"
	    android:textStyle="bold"
	    android:textSize="20sp"
	    android:layout_margin="10dp"
	    android:layout_alignParentBottom="true"
        />
    	
    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/acceptBtn"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >
            <TextView
		        android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:text="PHONE NUM 01"
		        android:id="@+id/tvphonenum1"
		        android:textColor="@color/white1"
		        android:background="@color/brightredoranage"
		        android:padding="10dp"
		        />
		    <LinearLayout
		        android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:orientation="vertical"
		        >
		        <EditText
			        android:layout_width="match_parent"
			    	android:layout_height="wrap_content"
			    	android:hint="Name"
			        android:id="@+id/etnum1name"
			        android:background="@layout/cell_shape"
			        android:padding="5dp"
		        />
		        <EditText
			        android:layout_width="match_parent"
			    	android:layout_height="wrap_content"
			    	android:hint="Phone1"
			        android:id="@+id/etnum1phone"
			        android:background="@color/transparent"
			        android:padding="5dp"
		        />
		    </LinearLayout>
		    
		    <TextView
		        android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:text="PHONE NUM 02"
		        android:id="@+id/tvphonenum2"
		        android:background="@color/pearlviolet"
		        android:textColor="@color/white1"
		        android:padding="10dp"
		        />
		    <LinearLayout
		        android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:orientation="vertical"
		        >
		        <EditText
			        android:layout_width="match_parent"
			    	android:layout_height="wrap_content"
			    	android:hint="Name"
			        android:id="@+id/etnum2name"
			        android:background="@layout/cell_shape"
			        android:padding="5dp"
		        />
		        <EditText
			        android:layout_width="match_parent"
			    	android:layout_height="wrap_content"
			    	android:hint="Phone1"
			        android:id="@+id/etnum2phone"
			        android:background="@color/transparent"
			        android:padding="5dp"
		        />
		    </LinearLayout>
		    
		    <TextView
		        android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:text="PHONE NUM 03"
		        android:id="@+id/tvphonenum3"
		        android:background="@color/pastelblue"
		        android:textColor="@color/white1"
		        android:padding="10dp"
		        />
		    <LinearLayout
		        android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:orientation="vertical"
		        >
		        <EditText
			        android:layout_width="match_parent"
			    	android:layout_height="wrap_content"
			    	android:hint="Name"
			    	android:layout_weight="3"
			        android:id="@+id/etnum3name"
			        android:background="@layout/cell_shape"
			        android:padding="5dp"
		        />
		       <EditText
			        android:layout_width="match_parent"
			    	android:layout_height="wrap_content"
			    	android:hint="Phone3"
			    	android:layout_weight="1"
			        android:id="@+id/etnum3phone"
			        android:background="@color/transparent"
			        android:padding="5dp"
		        />
		    </LinearLayout>
        </LinearLayout>
        
        
    </ScrollView>
</RelativeLayout>
